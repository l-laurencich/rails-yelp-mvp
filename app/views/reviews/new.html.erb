<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.select :rating, rating: [0,1,2,3,4,5] %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>


  <p> <%= link_to 'back to restaurant', restaurant_path(@restaurant) %> </p>
</div>