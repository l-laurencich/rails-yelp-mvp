<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, collection: Restaurant::CATEGORIES %>
    <%= f.submit class:'btn btn-primary' %>
  <% end %>

  <p><%= link_to 'back to results', restaurants_path %></p>

</div>

  